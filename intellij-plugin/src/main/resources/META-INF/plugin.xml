<idea-plugin url="https://github.com/YiiGuxing/intellij-dicom-viewer">
    <id>cn.yiiguxing.plugin.dicom</id>
    <name>Dicom Viewer</name>
    <version>1.0</version>
    <vendor email="yii.guxing@gmail.com" url="https://github.com/YiiGuxing">Yii.Guxing</vendor>

    <description><![CDATA[
      Provides View | A simple viewer of DICOM files.
    ]]></description>

    <idea-version since-build="171"/>
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService
                serviceInterface="cn.yiiguxing.plugin.dicom.DicomFileTypeManager"
                serviceImplementation="cn.yiiguxing.plugin.dicom.DicomFileTypeManager"/>
        <fileTypeFactory implementation="cn.yiiguxing.plugin.dicom.DicomFileTypeManager"/>
        <fileEditorProvider implementation="cn.yiiguxing.plugin.dicom.editor.DicomFileEditorProvider"/>
    </extensions>

    <actions>
        <group id="Dicom.EditorToolbar">
            <action class="cn.yiiguxing.plugin.dicom.actions.WindowingOperateAction"
                    id="Dicom.Editor.Windowing"
                    icon="/icons/colorWindowing.png"
                    text="Color Windowing"/>
            <action class="cn.yiiguxing.plugin.dicom.actions.TranslateOperateAction"
                    id="Dicom.Editor.Translate"
                    icon="/icons/move.png"
                    text="Move"/>
            <action class="cn.yiiguxing.plugin.dicom.actions.ZoomOperateAction"
                    id="Dicom.Editor.Zoom"
                    icon="/icons/zoom.png"
                    text="Zoom"/>
            <action class="cn.yiiguxing.plugin.dicom.actions.RotateOperateAction"
                    id="Dicom.Editor.Rotate"
                    icon="/icons/rotate.png"
                    text="Rotate"/>
            <action class="cn.yiiguxing.plugin.dicom.actions.SelectOperateAction"
                    id="Dicom.Editor.Select"
                    icon="/icons/selection.png"
                    text="Select"/>
            <separator/>
            <action class="cn.yiiguxing.plugin.dicom.actions.InvertAction"
                    id="Dicom.Editor.Invert"
                    icon="/icons/invert.png"
                    text="Invert"/>
            <separator/>
            <action class="cn.yiiguxing.plugin.dicom.actions.LocateAction"
                    id="Dicom.Editor.Locate"
                    icon="/icons/locate.png"
                    text="Locate"/>
            <separator/>
            <action class="cn.yiiguxing.plugin.dicom.actions.ZoomInAction"
                    id="Dicom.Editor.ZoomIn"
                    icon="/icons/zoomIn.png"
                    text="Zoom In"/>
            <action class="cn.yiiguxing.plugin.dicom.actions.ZoomOutAction"
                    id="Dicom.Editor.ZoomOut"
                    icon="/icons/zoomOut.png"
                    text="Zoom Out"/>
            <action class="cn.yiiguxing.plugin.dicom.actions.ActualSizeAction"
                    id="Dicom.Editor.ActualSize"
                    icon="/icons/actualZoom.png"
                    text="Zoom to Actual Size"/>
            <separator/>
            <action class="cn.yiiguxing.plugin.dicom.actions.CounterclockwiseRotateAction"
                    id="Dicom.Editor.CounterclockwiseRotate"
                    icon="/icons/rotateCounterclockwise.png"
                    text="Rotate 90 Degrees Counterclockwise"/>
            <action class="cn.yiiguxing.plugin.dicom.actions.ClockwiseRotateAction"
                    id="Dicom.Editor.ClockwiseRotate"
                    icon="/icons/rotateClockwise.png"
                    text="Rotate 90 Degrees Clockwise"/>
            <action class="cn.yiiguxing.plugin.dicom.actions.HorizontalFlipAction"
                    id="Dicom.Editor.HorizontalFlip"
                    icon="/icons/flipHorizontally.png"
                    text="Flip Horizontally"/>
            <action class="cn.yiiguxing.plugin.dicom.actions.VerticalFlipAction"
                    id="Dicom.Editor.VerticalFlip"
                    icon="/icons/flipVertically.png"
                    text="Flip Vertically"/>
            <separator/>
            <action class="cn.yiiguxing.plugin.dicom.actions.ResetViewportAction"
                    id="Dicom.Editor.ResetViewport"
                    icon="/icons/reset.png"
                    text="Reset Viewport"/>
        </group>
    </actions>

</idea-plugin>